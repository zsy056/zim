- to = @message.to
- from = @message.from
- sendmsg current_user.id, ["/#{to}"] do
  = render 'dialogs/show'
  :plain
    $("#chat-content-#{from}").append("#{escape_javascript render @message}");
    document.getElementById("chat-content-#{from}").scrollTop=10000;
$("#chat-content-#{to}").append("#{escape_javascript render @message}");
$("#chat-input-#{to}").val('');
document.getElementById("chat-content-#{to}").scrollTop=10000;
