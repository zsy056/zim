%div{ :id => "edit-dialog-#{@user.id}" }
  = form_for @user, :remote => true, :html => { :id => "edit-form-#{@user.id}" } do |f|
    = render 'shared/error_messages'
    .field
      = f.label :name
      %br
      = f.text_field :name
    .field
      = f.label :email
      %br
      = f.text_field :email
    .field
      = f.label :password
      %br
      = f.password_field :password
    .field
      = f.label :password_confirmation, 'Confirmation'
      %br
      = f.password_field :password_confirmation
  %div
    = gravatar_for @user
    %a{ :href => 'http://gravatar.com/emails' }
      change
